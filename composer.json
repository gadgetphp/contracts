{
  "name": "gadgetphp/contracts",
  "type": "library",
  "homepage": "https://github.com/gadgetphp/contracts",
  "license": "MIT",
  "authors": [
    {
      "name": "Melody Kimball",
      "role": "lead"
    }
  ],
  "support": {
    "issues": "https://github.com/gadgetphp/contracts/issues",
    "wiki": "https://github.com/gadgetphp/contracts/wiki",
    "source": "https://github.com/gadgetphp/contracts"
  },
  "require": {
    "php": "^8.1",
    "psr/cache": "^3.0",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.1",
    "psr/http-message": "^2.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "psr/log": "^3.0",
    "psr/simple-cache": "^3.0"
  },
  "require-dev": {
    "gadgetphp/code-style": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Gadget\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "apcu-autoloader": true
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs",
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon"
  }
}
